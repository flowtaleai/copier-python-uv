.DEFAULT_GOAL := help

build:  ## Build a python wheel package
	uv build --wheel
.PHONY: build

VERSION_PART ?= $(shell bash -c 'read -p "Version part [major, minor, patch]: " version_part; echo $$version_part')
bump:  ## Bump the project version and create a tag
	@uv run bump-my-version bump $(VERSION_PART)
.PHONY: bump

help: ## Show this help
	@echo "Specify a command. The choices are:"
	@grep -E '^[0-9a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[0;36m%-12s\033[m %s\n", $$1, $$2}'
	@echo ""
.PHONY: help

setup:  ## Setup aligned with CI
	@uv sync
	@cp .pre-commit-config.standard.yaml .pre-commit-config.yaml
	@cat .pre-commit-config.addon.strict.yaml >> .pre-commit-config.yaml
	@cat .pre-commit-config.addon.ruff.yaml >> .pre-commit-config.yaml
{% if type_checker == "mypy" %}
	@cat .pre-commit-config.addon.mypy.yaml >> .pre-commit-config.yaml
{% endif %}
	@uv run pre-commit install
	@echo "✓ Development environment ready (CI-aligned)"

setup-custom:  ## Setup with custom configuration
	@uv sync
	@cp .pre-commit-config.standard.yaml .pre-commit-config.yaml
	@cat .pre-commit-config.addon.strict.yaml >> .pre-commit-config.yaml
{% if enable_docstring_linting %}
	@read -p "Include docstring linting in pre-commit hooks? [y/N]: " include_docstrings && \
	if [[ "$$include_docstrings" =~ ^[Yy]$$ ]]; then \
		cat .pre-commit-config.addon.ruff.yaml >> .pre-commit-config.yaml; \
		echo "✓ Docstring linting included in pre-commit"; \
	else \
		sed 's/ruff check/ruff check --extend-ignore D/' .pre-commit-config.addon.ruff.yaml >> .pre-commit-config.yaml; \
		echo "✓ Docstring linting excluded from pre-commit (still enforced in CI)"; \
	fi
{% else %}
	@cat .pre-commit-config.addon.ruff.yaml >> .pre-commit-config.yaml
{% endif %}
{% if type_checker == "mypy" %}
	@cat .pre-commit-config.addon.mypy.yaml >> .pre-commit-config.yaml
{% endif %}
	@uv run pre-commit install

lint:   ## Runs linting on all project files
	@tempfile=$$(mktemp) && \
	trap 'rm -f $$tempfile' EXIT && \
	cat .pre-commit-config.standard.yaml .pre-commit-config.addon.strict.yaml .pre-commit-config.addon.ruff.yaml{% if type_checker == "mypy" %} .pre-commit-config.addon.mypy.yaml{% endif +%} > $$tempfile && \
	uv run pre-commit run --all-files -c $$tempfile
.PHONY: lint

test:  ## Run the project tests
	@uv run pytest
.PHONY: test
{% if generate_docs == "mkdocs" %}

docs: ## Build documentation
	@uv run mkdocs build --site-dir build/site

serve-docs: ## Build documentation and serve it locally
	@uv run mkdocs serve
.PHONY: docs serve-docs
{% elif generate_docs == "pdoc" %}

docs: ## Build documentation
	@uv run pdoc --output-directory build/site src/{{ package_name }}

serve-docs: ## Build documentation and serve it locally
	@uv run pdoc src/{{ package_name }}
.PHONY: docs serve-docs
{% endif %}
