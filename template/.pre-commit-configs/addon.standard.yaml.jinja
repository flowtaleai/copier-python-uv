  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer

  - repo: local
    hooks:
      - id: black
        name: Format files with black
        language: system
        entry: uv run black
        require_serial: true
        types_or: [python, pyi]

  - repo: local
    hooks:
      - id: ruff-lint
        name: Lint files with ruff
        entry: uv run ruff check{% if not enable_docstring_linting %} --extend-ignore D{% endif +%}
        language: system
        require_serial: true
        types_or: [python, pyi, jupyter]
  {% if lint_dockerfile %}
  - repo: https://github.com/hadolint/hadolint/
    rev: v2.12.0
    hooks:
      - id: hadolint
  {% endif %}
