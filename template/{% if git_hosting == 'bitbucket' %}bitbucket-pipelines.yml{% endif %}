image: "python:{{ python_version }}"

pipelines:
  default:
    - parallel:
      - step:
          name: Test
          caches:
            - pip
          script:
            - pip install uv=={{ uv_version }}
            - uv sync --no-install-project
            - uv run pytest
      - step:
          name: Lint code
          script:
            - pip install uv
            - uv sync --no-install-project
            - uv run pre-commit run --all-files
