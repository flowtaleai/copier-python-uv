name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

env:
  UV_VERSION: "{{ uv_version }}"

jobs:
  test:
    runs-on: ubuntu-24.04
    steps:
      - uses: actions/checkout@v3
      - name: Set up Python
        uses: actions/setup-python@v3
        with:
          python-version: "{{ python_version }}"
      - name: Install Dependencies
        run: |
          {% if task_runner == "make" %}
          apt-get update || sudo apt-get update
          apt-get install -y make || sudo apt-get install -y make
          {% endif %}
          python -m pip install --upgrade pip
          pip install uv==${UV_VERSION}
          {% if task_runner == "just" %}
          uv tool install just
          {% endif %}
          {{ task_runner }} setup
      - name: Test with pytest
        run: |
          uv run pytest

  lint:
    runs-on: ubuntu-24.04
    steps:
      - uses: actions/checkout@v3
      - name: Set up Python
        uses: actions/setup-python@v3
        with:
          python-version: "{{ python_version }}"
      - name: Install Dependencies
        run: |
          {% if task_runner == "make" %}
          apt-get update || sudo apt-get update
          apt-get install -y make || sudo apt-get install -y make
          {% endif %}
          python -m pip install --upgrade pip
          pip install uv==${UV_VERSION}
          {% if task_runner == "just" %}
          uv tool install just
          {% endif %}
          {{ task_runner }} setup
      - name: Lint
        run: |
          {{ task_runner }} lint
